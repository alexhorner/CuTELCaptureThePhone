@using Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewBag.Title = "Change Password";
}

<div class="container-sm mt-2">
    <div class="card mb-2">
        <div class="card-header">
            Change Password
        </div>

        <div class="card-body">
            <form method="POST" asp-action="ChangePassword">
                <div class="mb-2">
                    <label class="form-label" for="changePassword-old">Old Password</label>
                    <input type="password" class="form-control" name="oldPassword" id="changePassword-old"/>
                </div>

                <div class="mb-2">
                    <label class="form-label" for="changePassword-new">New Password</label>
                    <input type="password" class="form-control" name="newPassword" id="changePassword-new"/>
                </div>

                <div class="mb-2">
                    <label class="form-label" for="changePassword-confirmNew">Confirm New Password</label>
                    <input type="password" class="form-control" name="confirmNewPassword" id="changePassword-confirmNew"/>
                </div>

                <div class="d-flex flex-row-reverse">
                    <button type="submit" class="btn btn-primary mt-2">Save</button>
                </div>
            </form>
        </div>
    </div>
</div>
